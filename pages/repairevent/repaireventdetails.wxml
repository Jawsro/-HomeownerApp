<!--报事报修-->
<view class="container">
  <view class="top-css"></view>
  <!-- 组件引入 -->
  <header  my-property="物业报修"></header> 
  <view class="main-margin-top main" wx:if="{{yemian}}">
    <view class="repair-details">
      <view class="title-address">
        <view class="title">{{repairEventInfo.title}}</view>
        <view class="address">{{repairEventInfo.room_name}}</view>
      </view>
      <view class="description">
        {{repairEventInfo.item_description}}
      </view> 
      <view class="images">
        <view class="image-item" 
        wx:for="{{repairEventInfo.report_images}}" 
        wx:key="index"
        wx:if="{{repairEventInfo.report_images.length>0}}">
          <image mode="aspectFit" class="image"
            src="{{item}}">
          </image>
          
        </view>
      </view>
      <view class="details-msg">
        <view >
          <text>上报时间：</text>
          <text>{{repairEventInfo.createtime}}</text>
        </view>
        <view >
          <text>上报人：</text>
          <text>{{repairEventInfo.report_name}}</text>
        </view>
        <view>
          <text>联系方式：</text>
          <text>{{repairEventInfo.contact_tel}}</text>
        </view>
        <view>
          <text>维修单号：</text>
          <text>{{repairEventInfo.serial_code}}</text>
        </view>
      </view>
    </view>
    <view class="speed">
      <view class="speed-title">
        <text>报修进度</text>
      </view>
      <view class="speed-mian">
        <view class="speed-item" 
          wx:for="{{repairProcess}}"
          wx:key="index"
          wx:if="{{repairProcess.length>0}}">
          <view class="iconfont icon-lingxing icons"></view>
          <view class="speed-msg">
            {{item.short_description}}
          </view>
          <view class="speed-date">{{item.occur_time}}</view>
        </view>
        
      </view>
      <view class="appraise" wx:if="{{repairEventInfo.complete_status == 'yes'}}">
        <view class="appraise-title">请您为本次服务评价：</view>
        <view class="wuxing">
          <view class="xingxing" wx:for="{{wuxingArr}}" wx:key="index">
            <text class="iconfont {{item.icon}} {{activeLen>index ? 'active':'none'}}" 
              style="font-size:50rpx;"
              data-index="{{item.id}}" 
              bindtap="getAppraise"></text>
          </view>
        </view>
        <view class="completed" wx:if="{{completedIshow}}">
          您已完成本次评价。
        </view>
      </view>
    </view>
  </view>
</view>