
.container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;  
  
}
.main{
  padding: 30rpx 30rpx 145rpx 30rpx;
  background-color: #F7F2EF;
}
.scroll{
  height: 100%;
}
.pic{
  padding: 40rpx 0rpx 40rpx 20rpx;
  background-color: #fff;
  margin: 0 0rpx 10rpx;
}
.title{
  padding:0rpx 20rpx;
  color: #884334;
}
.pic-chose{
  display: flex;
  align-items: center;
  justify-content: left;
  flex-wrap:wrap;
  padding:40rpx 20rpx 0;
}
.pic-list{
  flex: 0 0 30%;
  width: 30%;
  height: 200rpx;
  margin-right: 16rpx;
  position: relative;
  border: 1rpx solid #EBEBEB;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}
.image{
  
  height: 200rpx;
  position: relative;
}
image{
  border-radius: 20rpx;
  height: 100%;
}
.phone{
  width:100rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform:translate(-50%,-50%);
}
.textarea-wrp{
  background-color: #fff;
  padding: 0 25rpx;
  margin: 0 0rpx 10rpx;
}
textarea {
  width: 700rpx;
  margin-bottom: 10rpx;
  padding: 25rpx 0;
}
.delete-pic{
  position:absolute;
  top:-25rpx;
  right: -15rpx;
  font-size: 50rpx;
  z-index: 9;
  color: #8E9090;
}
.disabled-true{
  color: #EBECEC !important;
  background-color: #8E9090 !important;
}