
.container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;  
  
}
.main{
  padding: 30rpx 0rpx 5rpx 0rpx;
  background-color: #F7F2EF;
  margin-top:228rpx;
}
.sort-box{
  
  position: fixed;
  top:150rpx;
  left:0rpx;
  right:0rpx;
  padding:10rpx 40rpx 0;
  background-color: #F7F2EF;
}
.sort{
  display: flex;
  background: #F2F3F5;
  border-radius: 40rpx;
  line-height: 70rpx;
  margin:0 40rpx 0rpx 40rpx;font-size: 30rpx;
}
.sort-item{
  flex: 1;
  text-align: center;
  font-weight:600;
  color:#898C91;
}
.active{
  background: #fff;
  border-radius: 70rpx;
  height: 100%;
  color:#000;
}
.scroll{
  height: 100%;
}
.event-item{
  margin-bottom: 16rpx;
  background: #fff;
  padding: 0 40rpx;
}
.title{
  display: flex;
  border-bottom:2rpx solid #DADADA;
  padding:30rpx 0;
  color:#884334;
}
.title-left{
  flex: 1;
  font-size: 32rpx;
}
.title-right{
  flex:0 0 200rpx;
  font-size: 26rpx;
  text-align: right;
}
.description{
  padding:20rpx 0;
}
.description-text{
  padding-bottom: 40rpx;
  font-size: 28rpx;
}
.description-time{
  font-size: 26rpx;
  color: #86888D;
}
.unauthorized{
  position: absolute;
  width: 100%;
  top: 33%;
  left: 50%;
  text-align: center;
  transform: translate(-50%,-50%);
  color: #BDBDBD;
}