.container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.main{
  padding: 20rpx;
}
.scroll{
  width: 100%;
  white-space: nowrap; 
}
.village{
  background: linear-gradient(to bottom, #EBDDD5 0%,#D9BFB1 50%,#C9A590 100%);
  border-radius: 20rpx;
  padding: 50rpx 20rpx;
  width: 250rpx;
  color: #833833;
  margin-right: 10rpx;
  display: inline-block;
}
.select-village{
  background: linear-gradient(to bottom, #E1E1E1 0%,#EFEFEF 50%,#FEFEFD 100%);
  color: #8A8A8A;
  border-radius: 20rpx;
  padding: 50rpx 20rpx;
  width: 250rpx;
  margin-right: 10rpx;
  display: inline-block
}
.village-name{
  margin-bottom: 10rpx;
}
.pay-list{
  margin-top: 40rpx;
}
.pay-item{
  background-color: #fff;
  box-shadow: 0 0rpx 20rpx rgba(0,0,0,0.2);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  padding: 30rpx 0rpx;
}
.pay-title{
  display: flex;
  padding: 0 30rpx;
}
.item-left{
  flex: 1;
}
.item-right{
  flex: 0 0 60rpx;
  width: 60rpx;
}
.pay-main{
  padding:40rpx 60rpx;
}
.main-title{
  color: #833833;
}
.pay-name{
  display: flex;
  padding-top:30rpx ;
}
.pay-name-left{
  flex: 1;
}
.pay-name-right{
  flex: 1;
  text-align: right;
}
.show{
  display: block;
}
.hidden{
  display: none;
}