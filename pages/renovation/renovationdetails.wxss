.container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;  
  
}
.main{
  padding: 0rpx 10rpx 15rpx 10rpx;
  background-color: #F7F2EF;
  margin-top:228rpx;
}
.sort-box{
  position: fixed;
  top:150rpx;
  left:0rpx;
  right:0rpx;
  padding:20rpx 30rpx 0;
  background-color: #F7F2EF;
}
.sort{
  display: flex;
  background: #F2F3F5;
  border-radius: 40rpx;
  
  font-size: 28rpx;
}
.sort-item{
  flex: 1;
  text-align: center;
  color:#898C91;
  padding:10rpx 0;
}
.active{
  background: #fff;
  border-radius: 70rpx;
  height: 100%;
  color:#884334;
}
.msg-box{
  margin-top: 20rpx;
  background: #fff;
}
.msg-box1 .msg-item{
  border-bottom:2rpx solid #F9F9F9;
  padding:20rpx 30rpx;
  font-size:30rpx;
}
.msg-item-last{
  padding:20rpx 30rpx;
  font-size:30rpx;
}
.images{
  display: flex;
  flex-wrap: wrap;
}
.image{
  border: 1rpx solid #EBEBEB;
  margin-top: 20rpx;
  border-radius: 20rpx;
  flex: 0 0 28%;
  width: 28%;
  height: 200rpx;
  margin-right: 16rpx;
  padding:5rpx;
}
image{
  height: 100%;
  border-radius: 20rpx;
}
.msg-item{
  display: flex;
}
.msg-left{
  flex: 1;
  color:#898C91;
}
.msg-right{
  flex: 1;
  text-align: right;
  color:#884334;
}