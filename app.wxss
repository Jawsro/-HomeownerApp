/*
  *表单样式
*/
.category-title{
  padding:20rpx 10rpx;
  color: #884334;
  font-size: 28rpx;
}
form .input-msg{
  padding: 40rpx 10rpx;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}
form .left-name{
  flex:0 0 210rpx;
  display: flex;
  align-items: center;
  color:#884334;
  font-weight:500;
}
form .input{
  flex:1;
  padding-left: 20rpx;
}
form .input input{
  text-align: right;
  padding-right:20rpx ;
}
form .picker{
  font-size:30rpx;
  color:#B7B7B7;
  text-align: right;
}
form textarea{
  color:#B7B7B7;
  font-size: 30rpx;
}
.form-btn{
  background-color: #884334;
  color: #fff;
  font-weight: 100;
  position: fixed;
  bottom:20rpx;
  z-index: 999;
  padding:30rpx;
  font-size:36rpx !important;
  border-radius: 60rpx !important;
  
}